<% include ../partial/header %>

<div class = "container">
    <div class = "row">
        <div class = "col-lg-3">
            <p class = "lead">YelpTour</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item ">Info 2</li>
                <li class = "list-group-item ">Info 3</li>
            </div>
        </div>
        <div class = "col-lg-9">
            <div class = "card">
                <img class = "card-img-top" src = "<%= tourground.image %>">
                <div class = "caption-full">
                    <h4 class = "float-right">Free</h4>
                    <h4><a><%= tourground.name %></a></h4>
                    <p><%= tourground.description %></p>
                    <p>
                        <em>Submitted By <%= tourground.author.username %></em>
                    </p>
                </div>
            </div>
            <div class = "well">
                <div class = "text-right">
                        <a class = "btn btn-success" href = '/tourgrounds/<%= tourground._id %>/comments/new'>Add new comment</a>
                </div>
                <hr>
                <% tourground.comments.forEach(function(comment){ %>
                    <div class = "row">
                        <div class = "col-lg-12">
                            <strong><%= comment.author.username %></strong>
                            <span class = "float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partial/footer %>